@model IEnumerable<CategoryVM>
<div class="container-fluid mt-4">
    <h1 class="text-center">Categories</h1>
    <a class="btn btn-success mt-2" asp-controller="Category" asp-action="Create">Create</a>
    <div class="table-responsive mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>

                @foreach(var item in Model)
                {
                    <tr>

                        <td>
                           @item.Name
                        </td>


                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">Detail</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                           <form class="d-inline" asp-action="Delete" method="post" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger">Delete</button>
                           </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>