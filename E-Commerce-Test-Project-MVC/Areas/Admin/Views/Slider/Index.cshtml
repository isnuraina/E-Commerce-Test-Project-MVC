@using E_Commerce_Test_Project_MVC.Areas.Admin.ViewModels.Slider
@model IEnumerable<SliderVM>
<div class="container-fluid mt-4">
    <h1 class="text-center">Sliders</h1>
    <a class="btn btn-success mt-2" asp-controller="Slider" asp-action="Create">Create</a>
    <div class="table-responsive mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                       Image
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                        <tr>

                            <td>
                            <img src="~/assets/img/@item.Image" style="width:150px; height:120px">
                            </td>


                            <td>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">Detail</a>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                               <form class="d-inline" asp-action="Delete" method="post" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                               </form>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>