@model SliderCreateVM
<div class="container">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="category">Name</label>
            <input  asp-for="Image" class="form-control" id="category" maxlength="1000" accept="image/*">
            <span class="text-danger" asp-validation-for="Image"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>
</div>