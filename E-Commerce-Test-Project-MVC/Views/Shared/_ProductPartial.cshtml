@model IEnumerable<Product>
@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@item.CategoryId">
            <div class="img">
                <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id">
                    <img src="~/assets/img/@(item.ProductImages.FirstOrDefault(m => m.IsMain)?.Img)" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@item.Name</h6>
            </div>
            <div class="price">
                <form asp-controller="Home" asp-action="AddProductToBasket" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-primary">
                        Add to cart
                        </button>
                </form>
                <span class="text-black-50">$@item.Price</span>
            </div>
        </div>
    </div>

}